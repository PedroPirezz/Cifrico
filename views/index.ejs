      <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

          <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
            <h2>Buscar cifra</h2>
            <h6>Busca por tom e índice</h6>
            <div style="display: flex; align-items: center; justify-content: center;">
              <form action="/Buscar" method="post" style="display: flex; width: 100%;">
                <select class="form-select flex-grow-1" name="tom" style="margin: 0 5px;">
                  <option value="C">C e C#</option>
                  <option value="D">D e D#</option>
                  <option value="E">E</option>
                  <option value="F">F</option>
                  <option value="G">G e G#</option>
                  <option value="A">A e A#</option>
                  <option value="B">B e Bb</option>
                  <option value="H">Harpa</option>
                  <option value="M">Toms menores</option>
                </select>
                <input name="indice" class="form-control flex-grow-1" type="number" name="cifra" placeholder="Índice"
                  style="margin: 0 5px;" required>
                <button type="submit" class="btn btn-outline-primary rounded-circle"
                  style="background-color: #3d4d6a; border-color: #3d4d6a;">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-zoom-in"
                    viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                      d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                    <path d="M10.7 14.3a1 1 0 1 1 1.4 0l3 3a1 1 0 1 1-1.4 1.4L10 15.6a1 1 0 1 1-1.4-1.4l2.3-2.3z" />
                  </svg>
                </button>
              </form>
            </div><br>
            <h6>Busca por nome</h6>
            <div class="form-group d-flex align-items-center">

              <form action="/findbyname" method="post" style="display: flex; flex-grow: 1;">
                <input type="text" class="form-control me-2" id="cifra" name="nome" placeholder="Digite a cifra"
                  list="cifraslist" required>
                <datalist id="cifraslist">
                  <% for (let i=0; i < todascifras.length; i++) { %>
                    <option value="<%= todascifras[i].nome %>">
                      <%= todascifras[i].nome %> - <%= todascifras[i].tom %> - <%= todascifras[i].indice %>
                    </option>
                    <% } %>
                </datalist>
                <!-- From Uiverse.io by gharsh11032000 -->
                <button type="submit" class="btn btn-outline-primary rounded-circle"
                  style="background-color: #3d4d6a; border-color: #3d4d6a;">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-zoom-in"
                    viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                      d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                    <path d="M10.7 14.3a1 1 0 1 1 1.4 0l3 3a1 1 0 1 1-1.4 1.4L10 15.6a1 1 0 1 1-1.4-1.4l2.3-2.3z" />
                  </svg>
                </button>
              </form>
            </div>
            <br>
            <h3>Cifras Favoritas</h3>
            <div style="display: flex; justify-content: center;">
              <a href="/limpar">
                <!-- From Uiverse.io by vinodjangid07 -->
