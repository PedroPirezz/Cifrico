                              alt="<%= cifrasfavoritas[i].nome %>" style="max-width: 100%; height: auto;">
                            <div class="portfolio-info rounded">
                              <p>ORDEM: <%= i + 1 %>
                              </p>
                              <h5 style="color: white;">
                                <%= cifrasfavoritas[i].nome %> 1
                              </h5>
                              <p>TOM: <%= cifrasfavoritas[i].tom %>
                              </p>
                              <!-- Link para a mesma imagem -->
                            </div>
                          </div>
                      </div> <!-- End Portfolio Item -->

