          <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">



            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

              <% for (let i=0; i < cifrasfavoritas.length; i++) { %>

                <% if (i> 0 && cifrasfavoritas[i].indice == cifrasfavoritas[i-1].indice && cifrasfavoritas[i].tom ==
                  cifrasfavoritas[i-1].tom) { %>

                  <% }else{ %>
                    <a href="/cancao/<%= cifrasfavoritas[i].tom %>/<%= cifrasfavoritas[i].indice %>">
                      <div class="col-lg-3 col-md-6 portfolio-item isotope-item rounded mb-5 mx-auto"
                        style="border: #3d4d6a 1px solid;">
                        <!-- Imagem principal -->
                        <% const imagemBase64=cifrasfavoritas[i].arquivo.toString('base64'); %>
